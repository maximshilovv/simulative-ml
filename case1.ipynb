   "source": [
    "import re\n",
    "import os\n",
    "import csv\n",
    "\n",
    "def process_files(input_path, output_path):\n",
    "# def process_files(input_path):\n",
    "  regex = re.compile(r'\\d{4}-\\d{2}-\\d{2}-\\d{2}-\\d{2}-\\d+.csv')\n",
    "  output_data = []\n",
    "  columns = ['date', 'product', 'store', 'cost']\n",
    "\n",
    "  for file in os.listdir(input_path):\n",
    "\n",
    "    if regex.match(file):\n",
    "      filepath = os.path.join(input_path, file)\n",
    "\n",
    "      if not output_data:\n",
    "        output_data.append(columns)\n",
    "      \n",
    "      with open(filepath, 'r') as f:\n",
    "        rows = csv.DictReader(f, delimiter=';')\n",
    "        for row in rows:\n",
    "          correct_row = [row[column] for column in columns]\n",
    "          output_data.append(correct_row)\n",
    "  \n",
    "  with open(output_path+'\\combined_data.csv', 'w', newline='') as output_file:\n",
    "    writer = csv.writer(output_file,  delimiter=',')\n",
    "    writer.writerows(output_data)\n",
   ]
  },
